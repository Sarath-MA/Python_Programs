#getting input from the user
num = int(input("Enter a number of terms "))

n1 = 0
n2 = 1
count = 0

#checking conditions
if num <= 0:
    print("Please enter the positive integer")
elif num == 1:
    print("The fibonacci series for", num, "is" , n1)
else:
    print("The fibonacci series for",num, "is")
    while count < num:
        print(n1)
        n3 = n1 + n2
        n1 = n2
        n2 = n3
        count += 1
        
        
        
